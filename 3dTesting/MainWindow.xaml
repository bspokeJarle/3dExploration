<Window x:Class="_3dTesting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3dTesting"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="2000" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="215*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="148*"/>
        </Grid.ColumnDefinitions>
        <Canvas Name="MyCanvas" Grid.ColumnSpan="3">
            <Canvas.CacheMode>
                <BitmapCache EnableClearType="False" RenderAtScale="1" SnapsToDevicePixels="True" />
            </Canvas.CacheMode>
        </Canvas>
    </Grid>
</Window>
