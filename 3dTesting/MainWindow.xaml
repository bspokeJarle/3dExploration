<Window x:Class="_3dTesting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3dTesting"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1280" WindowStyle="None"  WindowState="Maximized" Cursor="None">
    <Grid>
        <Canvas Name="MyCanvas">
            <Canvas.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#111111" Offset="2"/>
                    <GradientStop Color="#000033" Offset="0.007"/>
                </RadialGradientBrush>
            </Canvas.Background>
            <Canvas.CacheMode>
                <BitmapCache EnableClearType="False" RenderAtScale="1" SnapsToDevicePixels="True" />
            </Canvas.CacheMode>
        </Canvas>
    </Grid>
</Window>
